<p id="notice"><%= notice %></p>

<h1>KRAIGS ADMIN MENU</h1>

<table>
  <thead>
    <tr>
      <th>Part Number</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Name</th>
      <!-- <th>Description</th> -->
      <th>Condition</th>
      <th>Price</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= "%05d" % part.id %></td>
        <td><%= part.year %></td>
        <td><%= part.make %></td>
        <td><%= part.model %></td>
        <td><%= part.name %></td>
        <!-- <td><%= part.description %></td> -->
        <td><%= part.condition %></td>
        <td><%= '%.2f' % part.price %></td>
        <td><img class="tiny-thumb" src="<%= part.imgurl %>" alt=""> </td>
        <td><%= link_to 'Show Part', part %></td>
        <td><%= link_to 'Edit Part', edit_part_path(part) %></td>
        <td><%= link_to 'Delete Part', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="button button-outline">
  <%= link_to 'New Part', new_part_path %>
</div>
